moeda = input("Voce deseja qual opção ? (1) euro para dolar, (2) dolar para euro, (exit)  ")
if moeda == "1":
    euro = float(input("Digite o valor em Euro: "))
    euDol = euro * 1.19
    print("Seu valor de {}€ se tornaram {}$".format(euro,euDol))
elif moeda == "2":
    dolar = float(input("Digite o Valor em Dolar: "))
    dolEur = dolar / 1.19
    print("Seu valor de {} $ se tornaram {} €".format(dolar, dolEur))
else:
    print("exit")
    exit = input()
